@model IEnumerable<UserModel>
@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>
<table class="table table-bordered">

    <tr>
        <th>Name</th>
    </tr>

    @foreach (var user in Model.OrderBy(s => s.Nickname))
    {
        <tr>
            <td><a asp-controller="Users" asp-action="Edit" asp-route-id="@user.Id">@user.Surname @user.Name</a></td>
        </tr>
    }

    <tr>
        <th><div class="text-info">Total: @Model.Count()</div></th>
    </tr>
</table>
