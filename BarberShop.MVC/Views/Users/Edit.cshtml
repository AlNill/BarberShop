@model UserModel

@using (Html.BeginForm("Edit", "Users", FormMethod.Post))
{
    @Html.HiddenFor(x => x.Id)

    <div>
        @Html.ValidationSummary()
    </div>

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" type="text" asp-for="Name" />
        <span class="alert-danger" asp-validation-for="Name" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label>
        <input class="form-control" type="text" asp-for="Surname" />
    </div>
    <div class="form-group">
        <label asp-for="FatherName"></label>
        <input class="form-control" type="text" asp-for="FatherName" />
    </div>
    <div class="form-group">
        <label asp-for="NickName"></label>
        <input class="form-control" type="text" asp-for="NickName" />
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input class="form-control" type="text" asp-for="Email" />
        <span class="alert-danger" asp-validation-for="Email" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
}