@model ServiceModel

@using (Html.BeginForm("AdvancedSearch", "Services", FormMethod.Post))
{
    <div class="form-group">
        <label asp-for="Title"></label>
        <input class="form-control" type="text" asp-for="Title" />
        <span class="alert-danger" asp-validation-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Cost"></label>
        <input class="form-control" type="text" asp-for="Cost" />
        <span class="alert-danger" asp-validation-for="Cost" />
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Search</button>
    </div>
}