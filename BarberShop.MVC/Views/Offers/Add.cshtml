@model OfferModel


@using (Html.BeginForm("Add", "Offers", FormMethod.Post, 
    new { enctype = "multipart/form-data" }))
{
    <div class="form-group">
        <label asp-for="Title">Title</label>
        <input class="form-control" type="text" asp-for="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Cost">Cost</label>
        <input class="form-control" type="text" asp-for="Cost"/>
    </div>
    <div class="form-group">
        <label asp-for="Duration">Duration</label>
        <input class="form-control" type="text" asp-for="Duration"/>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-success">Save</button>
    </div>
}